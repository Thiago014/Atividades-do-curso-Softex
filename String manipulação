Algoritmo "conversor de número"

var
   numero : inteiro
   convertido : caractere
inicio
   escreval("Digite um número qualquer:")
   leia(numero)
   convertido <- NumpCarac(numero)
   escreval("o número convertido para caractere é ", convertido)
