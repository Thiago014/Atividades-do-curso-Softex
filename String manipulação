Algoritmo "separador de datas"

var
   x, y, z : real
   data, dia, mes, ano: caractere
inicio

Escreval("Digite uma data:")
  leia (data)
dia <- copia(data;1;2)
Mes <- copia(data;4;2)
ano <- copia(data;7;4)
   escreval("Dia: " + dia)
   escreval("Mês: " + mes)
   escreval("Ano: " + ano)

