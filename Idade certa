def idade(ano): 
   if(ano>=1922 and ano<=2021): 
     ano = 2022-ano 
     return ano 
   else: return ("Ano digitado incorreto.")     
  
 anocerto=False 
 
  while(anocerto==False): 
   try: 
     print("Digite o seu nome complrto: ") 
